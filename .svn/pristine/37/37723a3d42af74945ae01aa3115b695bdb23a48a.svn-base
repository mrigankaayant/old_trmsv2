<ui:composition xmlns="http://www.w3.org/1999/xhtml" xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:h="http://java.sun.com/jsf/html" xmlns:f="http://java.sun.com/jsf/core" xmlns:p="http://primefaces.org/ui"
	xmlns:c="http://java.sun.com/jsp/jstl/core">

    <p:messages for="messages" showDetail="true" autoUpdate="true" closable="true" />
		<p:panel>

			<f:facet name="header">
				<p:outputLabel>Candidates Details</p:outputLabel>
			</f:facet>
			
            <c:forEach var="checkList" items="#{hrBean.selectedCandidateCheckList}">
				<p:panelGrid columns="6" cellpadding="10" style="width:100%;">
					<f:facet name="header">Candidate ID: #{checkList.candidate.candidateId}</f:facet>
					
					<h:outputText value="Candidate Name:" />
					<h:outputText value="#{checkList.candidate.firstName}" />

					<h:outputText value="Email:" />
					<h:outputText value="#{checkList.candidate.contactAddress.email}" />

					<h:outputText value="Phone No.:" />
					<h:outputText value="#{checkList.candidate.contactAddress.workMobile}" />

					<h:outputText value="Course Name:" />
					<h:outputText value="#{checkList.candidate.candidateCourse.course}" />

					<h:outputText value="Recruiter Name:" />
					<h:outputText value="#{checkList.candidate.employee.name}" />

				</p:panelGrid>
			</c:forEach>
           
		</p:panel>
</ui:composition>